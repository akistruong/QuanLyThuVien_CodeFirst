    Layout = null;
   
}
@model QLTV2._0.Models.Taikhoan
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/AdminSrc/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/AdminSrc/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Mừng bạn trở lại</h1>
                                    </div>
                                    <form class="user" action="/dang-nhap" method="POST">
                                        <div class="form-group">
                                            <input  asp-for="UserName" class="form-control form-control-user"
                                                  
                                                   placeholder="Enter Email Address...">
                                            <span asp-validation-for="UserName"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Password" class="form-control form-control-user"
                                                    placeholder="Password">
                                                    <span asp-validation-for="Password"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">
                                                    Remember
                                                    Me
                                                </label>
                                            </div>
                                        </div>
                                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Đăng nhập">
                                            
                                       
                                        <hr>
                                        <a asp-area="Admin" asp-controller="Auth" asp-action="LoginWithGoogle" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Tiếp tục với Google
                                        </a>
                                                                                <a asp-area="Admin" asp-controller="Auth" asp-action="LoginWithFacebook" class="btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook fa-fw"></i> Tiếp tục với Facebook
                                        </a>
                                    </form>
                                    <hr>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/AdminSrc/vendor/jquery/jquery.min.js"></script>
    <script src="~/AdminSrc/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/AdminSrc/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/AdminSrc/js/sb-admin-2.min.js"></script>
