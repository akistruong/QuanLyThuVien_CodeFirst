@model IEnumerable<QLTV2._0.Models.Theloai>

@{
    ViewData["Title"] = "Danh sách thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               ID
            </th>
            <th>
                Tên thể loại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdTheloai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tentheloai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Matheloai">Chỉnh sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.Matheloai">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
