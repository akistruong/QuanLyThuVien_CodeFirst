@{
    ViewData["Title"] = "Eshopper";
}
<div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Mới cập nhật</span></h2>
        </div>
<div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3 " >
        @{
            List<Sach> products = ViewBag.productsNew;
            foreach(var item in products)
            {
               <div class="col-lg-4 col-md-6 pb-1">
                <div class="cat-item d-flex flex-column border mb-4" style="padding: 30px;">
                    <p class="text-right">@item.Slton</p>
                    <a href="" class="cat-img position-relative overflow-hidden mb-3">
                        <img class="img-fluid" src="~/assets/ImgThumb/@item.Img" alt="">
                    </a>
                    <h5 class="font-weight-semi-bold m-0">@item.Tensach</h5>
                </div>
            </div>
            }
        }
              
        </div>
    </div>