@using QLTV2._0.Helper
@{
    ViewData["Title"] = "Eshopper";

}
<div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Mới cập nhật</span></h2>
        </div>
<div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3 " >
        @{
            List<Sach> products = ViewBag.productsNew;
            if(products is not null)
            {
     foreach(var item in products)
            {
               <div class="col-lg-4 col-md-6 pb-1">
                <div class="cat-item d-flex flex-column border mb-4" style="padding: 30px;">
                    <p class="text-right">@item.Slton</p>
                    <a href="" class="cat-img position-relative overflow-hidden mb-3">
                        <img class="img-fluid" src="~/assets/ImgThumb/@item.Img" alt="">
                    </a>
                    <h5 class="font-weight-semi-bold m-0">@item.Tensach</h5>
                </div>
            </div>
            }
            }
        }
              
        </div>
    </div>
    @*Hot Products*@
       <div class="container-fluid pt-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Sản phẩm bán chạy</span></h2>
        </div>
        <div class="row px-xl-5 pb-3">
        @{
            List<Chitiethoadon> productsHot = ViewBag.productsHot;
            foreach (var item in productsHot)
            {
                  <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="img-fluid w-100" src="~/assets//ImgThumb/@item.MasachNavigation.Img" alt="">
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@item.MasachNavigation.Tensach</h6>
                        <div class="d-flex justify-content-center">
                            <h6>@FormatCurrency.Vnd(item.Dongia)</h6><h6 class="text-muted ml-2"></h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a  href="/san-pham/@item.MasachNavigation.IdSach/@CustomSlug.Slugify(item.MasachNavigation.Tensach)" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Xem chi tiết</a>
                        <button  class="btn btn-sm text-dark p-0  btnAddToCart " _id="@item.MasachNavigation.IdSach"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</button>
                    </div>
                </div>

        </div>
            }

            }
          
    </div>
   